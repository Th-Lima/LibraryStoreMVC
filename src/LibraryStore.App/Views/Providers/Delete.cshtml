@using LibraryStore.App.Extensions
@model LibraryStore.App.ViewModels.ProviderViewModel

@{
    ViewData["Title"] = "Excluir";
}

<h1>@ViewData["Title"]</h1>

<h5>Você tem certeza que deseja excluir o produto ?</h5>
<p class="text-danger">Uma vez excluído, não há como recuperá-lo</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Document)
        </dt>
        <dd class = "col-sm-10">
            @this.FormatDocument(Model.TypeProvider, Model.Document);
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
    </form>
    <partial name="_DetailsAddress" />
</div>
